<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/panelMain"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:fitsSystemWindows="true"
            android:src="@drawable/bg_cover_book" />

        <ImageView
            android:id="@+id/ivUnitPassed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_checked" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPassSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="1/6"
                android:textColor="#555"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivUnit"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:fitsSystemWindows="true"
                android:src="@drawable/img_unit" />

            <TextView
                android:id="@+id/tvUnitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Unit Name"
                android:textSize="16dp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>